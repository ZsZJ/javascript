{
  "compilerOptions": {
    "target": "ES6",
    "rootDir": "./packages",
    "sourceMap": true,
    "inlineSourceMap": false,
    "declaration": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./packages",
    "paths": {
      "hn": ["hn/src"],
      "hn-*": ["hn-*/src"]
    },
    "typeRoots": ["./packages/hn-react/types", "./node_modules/@types"]
  },
  "include": ["packages/*/src"],
  "exclude": [
    "packages/*/src/__tests__",
    "packages/*/src/**/__tests__",
    "packages/**/*.test.*"
  ]
}
