{
  "compilerOptions": {
    "target": "ES6",
    "rootDir": "./packages",
    "sourceMap": true,
    "inlineSourceMap": false,
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["packages/*/src"],
  "exclude": [
    "packages/*/src/__tests__",
    "packages/*/src/**/__tests__",
    "packages/**/*.test.*"
  ]
}
